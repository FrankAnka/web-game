// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"

}

model User {
  id        String      @id @default(uuid())  
  email     String   @unique
  name      String?   @unique
  salt      String
  hash      String
  sessions  Sessions[]
  profilePicture String? // cloudinary link
  permissions String   @default("user") // "user", "admin",

  maxScore   Int      @default(0)
  saveFiles SaveFiles[]

  createdAt DateTime @default(now())
}


model Sessions {
  id String     @id @default(uuid())
  token String @unique

  createdAt DateTime @default(now())
  lastUsed DateTime @default(now())
  expiresAt DateTime

  userAgent String?
  ipAddress String?
  devicenName String? 

  user   User? @relation(fields: [userId], references: [id],onDelete: Cascade)
  userId String?  

}


model SaveFiles {
  id        Int      @id @default(autoincrement())
  userId    String
  saveData  Json
  createdAt DateTime @default(now())  
  user      User     @relation(fields: [userId], references: [id])
}

